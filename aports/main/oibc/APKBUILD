pkgrel=0
pkgdesc="OpeniBoot Console"
url="https://github.com/iDroid-Project/OiBC"
arch="all"
license="GPL-3.0-or-later"
depends="readline"
makedepends="libusb-dev readline-dev"
subpackages=""
source="
    $pkgname.tar.gz::https://github.com/iDroid-Project/OiBC/archive/${_hash}.tar.gz
"
options="!check"

builddir="$srcdir"/OiBC-${_hash}
build() {
	make -C "$builddir"
}

package() {
	install -Dm 755 "$builddir/oibc" "$pkgdir"/usr/bin/oibc
}

