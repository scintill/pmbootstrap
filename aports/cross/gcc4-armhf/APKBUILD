_specsver=0.1.7
_espfver=0.3.6
_uclibc_abiver=0.9.32
if [ "$ALPINE_LIBC" = "eglibc" ]; then
	_chost="i686-pc-linux-gnu"
	_with_arch="i686"
else
	_chost="i486-alpine-linux-uclibc"
	_dynamic_linker="--with-dynamic-linker=ld-uClibc.so.$_uclibc_abiver"
	_with_arch="i486"
fi

