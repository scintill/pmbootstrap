# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kunitconversion
pkgver=5.44.0
pkgrel=0
pkgdesc='Support for unit conversion'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends=""
depends_dev="ki18n-dev"
makedepends="$depends_dev extra-cmake-modules qt5-qttools-dev doxygen"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # Check always fails

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="aa05ffbf8e587feb132376140a36bd3a5cefa08ec02893c5d44240f5fa78220c6ca2034ca00631054c3141d8bcb4563d2927c76adf19fec1687cdd2784cbec50  kunitconversion-5.44.0.tar.xz"
